<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:harman="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/blackfire_parent"
    android:background="@color/default_navigation_bg"
    android:paddingTop="@dimen/padding_from_status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fullscreen_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/fullscreen_background_tint"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <include layout="@layout/toolbar"/>
    <View
        android:id="@+id/toolbar_shadow"
        android:background="#393939"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_bg"
        android:background="@drawable/background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="45dp"
            android:paddingEnd="50dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/blackfire_logo"/>
                <com.harman.hkconnect.ui.custom.TypefaceTextView
                    android:autoLink="web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/Black_Message_str1"
                    harman:font_type="Roboto_Semibold"
                    style="@style/font_white_16"/>
                <com.harman.hkconnect.ui.custom.TypefaceTextView
                    android:id="@+id/blackfire_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    harman:font_type="Roboto_Semibold"
                    style="@style/font_white_16"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
