<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#d8000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/settings_app"
        android:background="#54ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_bar_size"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">
        <SearchView
            android:id="@+id/search"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:imeOptions="actionSearch"
            android:iconifiedByDefault="false"/>
        <com.harman.hkconnect.ui.custom.TypefaceEditText
            android:gravity="center_vertical"
            android:id="@+id/searchEditText"
            android:background="@drawable/list_search_s1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textCapWords"
            android:imeOptions="actionSearch"/>
        <com.harman.hkconnect.ui.custom.TypefaceButton
            android:textSize="@dimen/group_item"
            android:textColor="#fff"
            android:id="@+id/go_back"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel_Str"
            android:onClick="goBack"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/tracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/tracks_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:divider="@null"/>
            <com.harman.hkconnect.ui.custom.TypefaceTextView
                android:textSize="@dimen/group_item"
                android:id="@+id/tracks_empty"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kDeezer_No_content_Str"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
