<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:harman="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/settings_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/padding_from_status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fullscreen_background"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/fullscreen_background_tint"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <include layout="@layout/toolbar"/>
    <View
        android:id="@+id/toolbar_shadow"
        android:background="#393939"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_bg"
        android:background="@drawable/background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/disable_toggle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/disable_hardware_volume_spacing"
            android:paddingStart="@dimen/setting_padding"
            android:paddingEnd="@dimen/setting_padding">
            <com.harman.hkconnect.ui.custom.TypefaceSwitch
                android:id="@+id/disable_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
            <com.harman.hkconnect.ui.custom.TypefaceTextView
                android:id="@+id/disable_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kSettings_DisableHardwareVolume_Str"
                android:maxLines="3"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/settings_itemlist_padding"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/disable_switch"
                style="@style/font_white_20_alpha80_bold"/>
        </RelativeLayout>
        <com.harman.hkconnect.ui.custom.TypefaceTextView
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/grey_9c9d9f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_padding"
            android:text="@string/kSettings_DisableHardwareVolumeSubtitle_Str"
            android:layout_below="@+id/disable_tv"
            android:layout_centerInParent="true"
            android:paddingStart="@dimen/disable_hardware_volume_info_left_spacing"
            android:paddingEnd="@dimen/setting_padding"
            style="@style/font_white_20_alpha80_bold"/>
    </LinearLayout>
</LinearLayout>
