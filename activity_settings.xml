<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:harman="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/settings_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/padding_from_status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fullscreen_background"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/fullscreen_background_tint"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <include layout="@layout/toolbar"/>
    <View
        android:id="@+id/toolbar_shadow"
        android:background="#393939"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/content_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/service_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:paddingStart="@dimen/setting_padding"
                        android:paddingEnd="@dimen/setting_padding">
                        <com.harman.hkconnect.ui.custom.TypefaceTextView
                            android:paddingLeft="@dimen/settings_itemlist_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kSettings_musicService_Str2"
                            android:layout_centerInParent="true"
                            android:paddingStart="@dimen/settings_itemlist_padding"
                            style="@style/font_white_20_alpha80_bold"/>
                        <ImageView
                            android:paddingRight="@dimen/settings_arrow_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_copy"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="@dimen/settings_arrow_padding"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <com.harman.hkconnect.ui.custom.HorizontalListView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/mslist"
                            android:background="@color/transparent"
                            android:paddingLeft="15dp"
                            android:clipToPadding="false"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:paddingStart="15dp"
                            harman:dividerWidth="0dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <RelativeLayout
                    android:id="@+id/setup"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_SetupNewRoom"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                    <ImageView
                        android:paddingRight="@dimen/settings_arrow_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_copy"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/settings_arrow_padding"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <RelativeLayout
                    android:id="@+id/room_management"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_Manage_Rooms"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                    <ImageView
                        android:paddingRight="@dimen/settings_arrow_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_copy"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/settings_arrow_padding"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <RelativeLayout
                    android:id="@+id/tutorial"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_Tutorial_Str"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                    <ImageView
                        android:paddingRight="@dimen/settings_arrow_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_copy"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/settings_arrow_padding"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <RelativeLayout
                    android:id="@+id/product_info"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_Production_Str"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                    <ImageView
                        android:paddingRight="@dimen/settings_arrow_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_copy"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/settings_arrow_padding"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <RelativeLayout
                    android:id="@+id/advanced_control"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_AdvancedControl_Title_Str"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                    <ImageView
                        android:paddingRight="@dimen/settings_arrow_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_copy"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/settings_arrow_padding"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:id="@+id/faq"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_FAQ_str"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:id="@+id/feedback"
                    android:padding="@dimen/setting_padding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <com.harman.hkconnect.ui.custom.TypefaceTextView
                        android:paddingLeft="@dimen/settings_itemlist_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kSettings_SendUsFeedback_Str"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/settings_itemlist_padding"
                        style="@style/font_white_20_alpha80_bold"/>
                </RelativeLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
