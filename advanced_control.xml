<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:harman="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/settings_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/padding_from_status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/fullscreen_background"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/fullscreen_background_tint"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <include layout="@layout/toolbar"/>
    <View
        android:id="@+id/toolbar_shadow"
        android:background="#393939"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/content_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/service_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="@dimen/setting_padding"
                        android:paddingEnd="@dimen/setting_padding">
                        <com.harman.hkconnect.ui.custom.TypefaceToggleButton
                            android:id="@+id/disable_hardware_volume_toggle"
                            android:background="@drawable/disable_hardware_volume_toggle_selector"
                            android:layout_width="@dimen/disable_hardware_volume_toggle_width"
                            android:layout_height="@dimen/disable_hardware_volume_toggle_height"
                            android:textOn=""
                            android:textOff=""
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:buttonTint="@color/gray"/>
                        <com.harman.hkconnect.ui.custom.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kSettings_DisableHardwareVolume_Str"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/settings_itemlist_padding"
                            android:layout_toStartOf="@+id/disable_hardware_volume_toggle"
                            android:layout_alignParentStart="true"
                            harman:font_type="Roboto_Bold"
                            style="@style/font_white_18_alpha80_bold"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:background="@color/default_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_divider"/>
                <com.harman.hkconnect.ui.custom.TypefaceTextView
                    android:textSize="@dimen/disable_hardware_volume_msg_size"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/kSettings_DisableHardwareVolumeSubtitle_Str"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
